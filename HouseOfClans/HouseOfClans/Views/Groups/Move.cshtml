@model HouseOfClans.Models.ViewModels.Groups.MoveMemberViewModel

@{
    ViewBag.Title = "Move To A Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Move</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.HiddenFor(model => model.MoveMemberId)

        <div class="form-group">
            @Html.LabelFor(model => model.NewGroupId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.NewGroupId, Model.MoveToGroups, "Move To...",new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewGroupId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Move" class="btn btn-default" />
            </div>
        </div>
    </div>
}
